@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "/Pages/Shared/_Layout.cshtml";   
}

<div class="max-w-md mx-auto mt-12">
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title justify-center">Create a new account</h2>

            <form id="registerForm"
                  asp-route-returnUrl="@Model.ReturnUrl"
                  method="post"
                  class="space-y-4">

               
                <div asp-validation-summary="ModelOnly"
                     class="text-error text-sm"></div>

                
                <div>
                    <label asp-for="Input.Email" class="label">
                        <span class="label-text">Email</span>
                    </label>
                    <input asp-for="Input.Email"
                           class="input input-bordered w-full"
                           autocomplete="username" />
                    <span asp-validation-for="Input.Email"
                          class="text-error text-sm"></span>
                </div>

                
                <div>
                    <label asp-for="Input.Password" class="label">
                        <span class="label-text">Password</span>
                    </label>
                    <input asp-for="Input.Password"
                           class="input input-bordered w-full"
                           autocomplete="new-password" />
                    <span asp-validation-for="Input.Password"
                          class="text-error text-sm"></span>
                </div>

                
                <div>
                    <label asp-for="Input.ConfirmPassword" class="label">
                        <span class="label-text">Confirm password</span>
                    </label>
                    <input asp-for="Input.ConfirmPassword"
                           class="input input-bordered w-full"
                           autocomplete="new-password" />
                    <span asp-validation-for="Input.ConfirmPassword"
                          class="text-error text-sm"></span>
                </div>


                <button id="registerSubmit"
                        type="submit"
                        class="btn btn-primary w-full">
                    Register
                </button>
            </form>


            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <div class="mt-6">
                    <h3 class="text-center font-semibold mb-2">
                        Use another service
                    </h3>
                    <form id="external-account"
                          asp-page="./ExternalLogin"
                          asp-route-returnUrl="@Model.ReturnUrl"
                          method="post"
                          class="grid gap-2">
                        @foreach (var p in Model.ExternalLogins!)
                        {
                            <button type="submit"
                                    name="provider"
                                    value="@p.Name"
                                    title="Register with @p.DisplayName"
                                    class="btn w-full">
                                @p.DisplayName
                            </button>
                        }
                    </form>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}