@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="max-w-md mx-auto mt-12">
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title justify-center">Sign in</h2>

            <form method="post" class="space-y-4" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-error text-sm"></div>

                <div>
                    <label asp-for="Input.Email" class="label">
                        <span class="label-text">Email</span>
                    </label>
                    <input asp-for="Input.Email"
                           class="input input-bordered w-full"
                           autocomplete="username" />
                    <span asp-validation-for="Input.Email" class="text-error text-sm"></span>
                </div>

                <div>
                    <label asp-for="Input.Password" class="label">
                        <span class="label-text">Password</span>
                    </label>
                    <input asp-for="Input.Password"
                           class="input input-bordered w-full"
                           autocomplete="current-password" />
                    <span asp-validation-for="Input.Password" class="text-error text-sm"></span>
                </div>

                <label class="flex items-center gap-2">
                    <input asp-for="Input.RememberMe" class="checkbox checkbox-primary" />
                    <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                </label>

                <button type="submit" class="btn btn-primary w-full">Log in</button>
            </form>

            <div class="text-center text-sm mt-4 space-y-1">
                <a asp-page="./ForgotPassword" class="link">Forgot password?</a><br />
                <a asp-page="./Register" class="link">Register as a new user</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}