@page
@model KeyManagementAPI.Pages.Decrypt.Asymmetric.DecryptModel
@{
    ViewData["Title"] = "RSA Decrypt";
}

<div class="max-w-2xl mx-auto mt-10">
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title">Decrypt Data (RSA)</h2>

            <form method="post" class="space-y-4">
                <!-- key dropdown -->
                <div>
                    <label asp-for="SelectedKeyId" class="label">
                        <span class="label-text">Select RSA Key</span>
                    </label>
                    <select asp-for="SelectedKeyId" class="select select-bordered w-full">
                        <option value="">-- choose key --</option>
                        @foreach (var k in Model.Keys.Where(k => k.Algorithm == "RSA"))
                        {
                            <option value="@k.Id">@k.Name (@k.KeySize)-bit</option>
                        }
                    </select>
                </div>

                <!-- ciphertext -->
                <div>
                    <label asp-for="CipherText" class="label">
                        <span class="label-text">Ciphertext (Base64)</span>
                    </label>
                    <textarea asp-for="CipherText"
                              class="textarea textarea-bordered w-full"
                              rows="4"></textarea>
                </div>

                <button type="submit" class="btn btn-primary w-full">Decrypt</button>
            </form>

            @if (Model.Result != null)
            {
                <div class="mt-6">
                    <h3 class="font-semibold">Plaintext</h3>
                    <textarea class="textarea textarea-bordered w-full mt-2"
                              rows="3" readonly>@Model.Result.PlainText</textarea>
                </div>
            }
        </div>
    </div>
</div>