@page
@model KeyManagementAPI.Pages.DecryptModel
@{
    ViewData["Title"] = "Decrypt";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-dark shadow-sm">
                <div class="card-header text-white" style="background-color:#2a2f5b;">
                    <h2 class="mb-0">Decrypt Data</h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mb-4">
                            <label asp-for="SelectedKeyId" class="form-label">Select Key</label>
                            <select asp-for="SelectedKeyId" class="form-select">
                                <option value="">-- choose key --</option>
                                @foreach (var k in Model.Keys)
                                {
                                    <option value="@k.Id">@k.Name (@k.KeySize)-bit</option>
                                }
                            </select>
                        </div>
                        <div class="mb-4">
                            <label asp-for="CipherText" class="form-label">Ciphertext</label>
                            <textarea asp-for="CipherText" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="mb-4">
                            <label asp-for="Iv" class="form-label">Initialization Vector (IV)</label>
                            <input asp-for="Iv" class="form-control" />
                        </div>
                        <div class="d-grid">
                            <button type="submit"
                                    class="btn btn-lg text-white"
                                    style="background-color:#2a2f5b;border-color:#2a2f5b;">
                                Decrypt
                            </button>
                        </div>
                    </form>

                    @if (Model.Result != null)
                    {
                        <hr />
                        <h5>Plaintext</h5>
                        <textarea class="form-control mb-3" rows="3" readonly>@Model.Result.PlainText</textarea>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // page-specific JS if needed
    </script>
}